# defining a function for safe multiplication
def safe_multiplication():
    #starting a loop to check and validate user input values before proceeding to calculation
    while True:
        
        # prompt for user to enter first number or quit
        user_input = input("Enter the first number or 'q' to quit: ")
        
        # if user wants to quit, we need to end the loop
        if user_input == 'q':  
            print("Goodbye!")
            break
        
        # testing if user value is numeric or not by trying to convert it to a float
        try:
            num1 = float(user_input) # saving the value in a variable called num1
            
        # if there is an error with converting to a float, print the following custom message 
        except ValueError:
            print("Error: Invalid input. Please enter numeric values.")
            continue  # continue to try again if error occurred

        # prompt for user to enter second number or quit
        user_input2 = input("Enter the second number or 'q' to quit: ")

        # if user wants to quit, we need to end the loop
        if user_input2 == 'q':  
            print("Goodbye!")
            break
        
        # testing if user value is numeric or not by trying to convert it to a float
        try:
            num2 = float(user_input2)  # saving the value in a variable called num2
            
        # if there is an error with converting to a float, print the following custom message
        except ValueError:
            print("Error: Invalid input. Please enter numeric values.")
            continue  # continue to try again if error occurred

        # calculating the product of both num1 and num2, then printing the product
        product = num1 * num2
        print(f"Product: {product:.2f}")

        # asking the user if they want to continue or not
        to_continue = input("Would you like to perform another multiplication (yes/no): ")
        # if user wants to quit, we need to exit
        if to_continue == 'no':
            print("Goodbye!")
            break
        # if user would like to continue, we continue, starting over
        if to_continue == 'yes':
            continue
        
# calling the function to run   
safe_multiplication()
