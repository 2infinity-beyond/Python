
import random

random_number = random.randint(1, 10)

attempts = 5

while attempts > 0:
    # added "int", the lack of which causes a type error
    guess = int(input("Enter a number between 1 and 10: "))
    
    if guess == random_number:
        print("Congratualtions! You guessed the number.")
        break
    elif guess < random_number:
        print("Your guess is too low.")
    elif guess > random_number:
        print("Your guess is too high.")
     # corrected logic error to "-=" or loop will continue to run   
    attempts -= 1
    
if attempts == 0:
    #corrected indentation of print statement to avoid syntax error
    print(f"Sorry, you've run out of attempts. The number was {random_number}.")


